<div class="page-header"><h1>イベント作成</h1></div>

<%= form_for(@event, class: 'form-horizontal', role: 'form') do |f| %>
  <% if @event.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form_control' %>
  </div>

  <div class="form-group">
    <%= f.label :place %><%= f.text_field :place, class: 'form_control' %>
  </div>

  <div class="form-group">
    <% if @event.event_image? %>
      <div class="thumbnail">
        <%= image_tag @event.event_image.url %>
      </div>
    <% end %>

    <%= f.file_field :event_image %>
    <% if false %>
      <%= f.hidden_field :event_image_cache %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :start_time %>
    <div><%= datetime_select_now f, :start_time %></div>
  </div>

  <div class="form-group">
    <%= f.label :end_time %>
    <div><%= datetime_select_now f, :end_time %></div>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form_control', row: 10 %>
  </div>

  <%= submit_tag_with_label f, '作成', '作成中…' %>
<% end %>
